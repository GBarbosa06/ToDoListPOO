package ucb.grupo3;

import ucb.grupo3.service.TarefaServico;
import ucb.grupo3.model.Tarefa;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        TarefaServico servico = new TarefaServico();
        int opcao;

        do {
            System.out.println("\n==== ToDo List ====");
            System.out.println("1 - Criar tarefa");
            System.out.println("2 - Listar tarefas");
            System.out.println("3 - Editar tarefa");
            System.out.println("4 - Excluir tarefa");
            System.out.println("5 - Marcar tarefa como concluída");
            System.out.println("0 - Sair");
            System.out.print("Escolha uma opção: ");
            opcao = scanner.nextInt();
            scanner.nextLine(); // consumir quebra de linha

            switch (opcao) {
                case 1:
                    System.out.print("Título: ");
                    String titulo = scanner.nextLine();
                    System.out.print("Descrição: ");
                    String descricao = scanner.nextLine();
                    Tarefa t = servico.criarTarefa(titulo, descricao);
                    System.out.println("Tarefa criada: " + t.getId() + " - " + t.getTitulo());
                    break;

                case 2:
                    System.out.println("\n--- Lista de Tarefas ---");
                    for (Tarefa tarefa : servico.visualizarTarefas()) {
                        System.out.println(
                            tarefa.getId() + " | " + tarefa.getTitulo() + " | " +
                            tarefa.getDescricao() + " | " +
                            (tarefa.isCompleta() ? "Concluída" : "Pendente")
                        );
                    }
                    break;

                case 3:
                    System.out.print("ID da tarefa a editar: ");
                    int idEditar = scanner.nextInt();
                    scanner.nextLine();
                    System.out.print("Novo título (ou Enter para manter): ");
                    String novoTitulo = scanner.nextLine();
                    System.out.print("Nova descrição (ou Enter para manter): ");
                    String novaDescricao = scanner.nextLine();
                    System.out.print("Está concluída? (s/n ou Enter para manter): ");
                    String status = scanner.nextLine();

                    Boolean completa = null;
                    if (status.equalsIgnoreCase("s")) completa = true;
                    else if (status.equalsIgnoreCase("n")) completa = false;

                    servico.editarTarefa(
                        idEditar,
                        novoTitulo.isEmpty() ? null : novoTitulo,
                        novaDescricao.isEmpty() ? null : novaDescricao,
                        completa
                    );
                    System.out.println("Tarefa atualizada!");
                    break;

                case 4:
                    System.out.print("ID da tarefa a excluir: ");
                    int idExcluir = scanner.nextInt();
                    servico.excluirTarefa(idExcluir);
                    System.out.println("Tarefa excluída!");
                    break;

                case 5:
                    System.out.print("ID da tarefa a marcar como concluída: ");
                    int idConcluir = scanner.nextInt();
                    servico.marcarTarefa(idConcluir);
                    System.out.println("Tarefa marcada como concluída!");
                    break;

                case 0:
                    System.out.println("Saindo...");
                    break;

                default:
                    System.out.println("Opção inválida!");
            }
        } while (opcao != 0);

        scanner.close();
    }
}
